extends ./layout.jade

block body
    form(action="/signup", method="POST")
        fieldset
            legend Sign up
            p
                label First
                input(name="user[first]", type="text")
            p
                label Last
                input(name="user[last]", type="text")
            p
                label Email
                input(name="user[email]", type="text")
            p
                label Password
                input(name="user[password]", type="password")
            p
                button(type="submit") Submit
            p
                a(href="/") Go Back